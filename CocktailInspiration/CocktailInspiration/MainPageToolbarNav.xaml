             x:Class="CocktailInspiration.MainPageToolbarNav"
             xmlns:local="clr-namespace:CocktailInspiration">

    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin Forms!" />
        </StackLayout>
    </ContentPage.Content>
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="tbi_Inspiration" Text="Cocktail Inspiration" Icon="Cocktail_Icon.png" Clicked="tbi_Inspiration_Clicked" ></ToolbarItem>
        <ToolbarItem x:Name="tbi_Ingredient" Text="Ingredient" Icon="Ingredients.png" Clicked="tbi_Ingredient_Clicked"></ToolbarItem>
        <ToolbarItem x:Name="tbi_Favorites" Text="Favorites" Icon="FavoriteIcon.png" Clicked="tbi_Favorites_Clicked"></ToolbarItem>
