<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CocktailInspiration.FavoritesPage"
             Title="Favorites"
             Icon="FavoriteIcon">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="lview_Cocktails" ItemTapped="lview_Cocktails_ItemTapped" HasUnevenRows="True" Margin="5" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame OutlineColor="Black" CornerRadius="3" BackgroundColor="LightGray" HasShadow="True" Margin="3">
                                <StackLayout>
                                    <Label Text="{Binding CocktailName}"></Label>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Rating:"></Label>
                                        <Label Text="{Binding Rating}"></Label>
                                        <Label Text="/5"></Label>
                                    </StackLayout>
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>